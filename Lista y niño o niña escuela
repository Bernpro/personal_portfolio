redlist = ["apple", "banana", "cherry"]
[print(x) for x in redlist]

#agregar la palabra orange o naranja a la lista
#usando el metodo append
redlist = ["apple", "banana", "cherry"]
redlist.append("orange")
print(redlist)

#remover la palabra apple o manzana a la lista
#usando el metodo remove

redlist = ["apple", "banana", "cherry", "orange"]
redlist.remove("apple")
print(redlist)




